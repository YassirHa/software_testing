pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/YassirHa/software_testing.git'
      }
    }

    stage('Build') {
      steps {
        sh 'mvn clean install'
      }
    }

    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }
  }
}
